<%= form_with(model: todo, local: true) do |form| %>
  <% if todo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todo.errors.count, "個") %> エラーがあります:</h2>

      <ul>
      <% todo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>
  
  <div class="field">
    <%= form.label :priority %>
    <%= form.number_field :priority %>
  </div>
  
  <div class="field">
    <%= form.label :category %>  
    <% @categories = Category.all %>
    <%= form.select :category_id, @categories.map{|t| [t.name, t.id]}, { include_blank: true } %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
